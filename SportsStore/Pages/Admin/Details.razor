@page "/admin/products/details/{id:long}"

<h3 class="bg-info text-white text-center p-1">Details</h3>

<table class="table table-sm table-bordered table-striped">
    <tbody>
        <tr><th>ID</th><td>@haber.Id</td></tr>
        <tr><th>Başlık</th><td>@haber.Baslik</td></tr>
        <tr><th>Metin</th><td>@haber.Metin</td></tr>
        <tr><th>Kategori</th><td>@haber.Kategori</td></tr>
        <tr><th>Resim</th><td>@haber.ResimYolu</td></tr>
    </tbody>
</table>

<NavLink class="btn btn-warning" href="@EditUrl">Edit</NavLink>
<NavLink class="btn btn-secondary" href="/admin/products">Back</NavLink>

@code {

    [Inject]
    public IStoreRepository Repository { get; set; }

    [Parameter]
    public long Id { get; set; }

    public Haber haber { get; set; }

    protected override void OnParametersSet() {
        haber = Repository.Haberler.FirstOrDefault(p => p.Id == Id);
    }

    public string EditUrl => $"/admin/products/edit/{haber.Id}";
}
